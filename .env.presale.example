MAX_PURCHASE_PRESALE_USDT=10000    # Max 10,000 USDT in presale
MAX_PURCHASE_PUBLIC_USDT=5000      # Max 5,000 USDT in public sale

# Referral System Configuration
REFERRAL_ENABLED=true              # Enable referral system
REFERRER_BONUS_PERCENT=50          # 5% bonus for referrer (50 = 5.0%)
REFEREE_BONUS_PERCENT=25           # 2.5% bonus for referee (25 = 2.5%)
